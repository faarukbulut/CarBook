@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Banner Düzenle</h4>
            <form method="post">
                @Html.HiddenFor(x => x.BannerID)

                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description">
                </div>

                <div class="form-group">
                    <label>Video Açıklama</label>
                    <input type="text" class="form-control" asp-for="VideoDescription">
                </div>

                <div class="form-group">
                    <label>Video Url</label>
                    <input type="text" class="form-control" asp-for="VideoUrl">
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light">Düzenle</button>
            </form>

        </div>
    </div>
</div>

