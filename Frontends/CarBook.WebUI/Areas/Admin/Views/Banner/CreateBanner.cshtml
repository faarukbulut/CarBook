@model CreateBannerDto
@{
    ViewData["Title"] = "CreateBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Banner Ekle</h4>
            <form method="post">
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" asp-for="Title">
                </div>

                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description">
                </div>

                <div class="form-group">
                    <label>Video Açıklama</label>
                    <input type="text" class="form-control" asp-for="VideoDescription">
                </div>

                <div class="form-group">
                    <label>Video Url</label>
                    <input type="text" class="form-control" asp-for="VideoUrl">
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light">Ekle</button>
            </form>

        </div>
    </div>
</div>

