@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    var count = 0;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yorum Listesi</h4>
                    @foreach (var item in Model)
                    {
                        count++;
                        <div class="col-md-12">
                            <div class="card">
                                <h5 class="card-header">Yorum - @count</h5>
                                <div class="card-body">
                                    <h4 class="card-title">@item.Name</h4>
                                    <p class="card-text">
                                        @item.Description.
                                    </p>
                                    <a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

