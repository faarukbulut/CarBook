@model List<ResultLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Lokasyon Bilgileri Alanı</h4>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>Lokasyon</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Konumu Aç</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td><a href="/Admin/Location/RemoveLocation/@item.LocationID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/Location/UpdateLocation/@item.LocationID" class="btn btn-outline-success">Güncelle</a></td>
                                        <td><a href="/Admin/Location/LocationDEtail/@item.LocationID" class="btn btn-outline-dark">Konumu Aç</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Location/CreateLocation" class="btn btn-outline-primary">Yeni Lokasyon Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

