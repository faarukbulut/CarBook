@model ResultLocationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

@await Component.InvokeAsync("_HomeCoverUIComponentPartial")

<section class="ftco-section ftco-no-pt bg-light">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-md-12 featured-top">
                <div class="row no-gutters">
                    <div class="col-md-4 d-flex align-items-center">
                        <form method="post" asp-action="Index" asp-controller="RentACarList" class="request-form ftco-animate bg-primary">
                            <h2>Aracınızı Şimdi Kiralayın</h2>
                            <div class="form-group">
                                <label class="label">Alınacak Lokasyon</label>
                                @Html.DropDownListFor(x=>x.LocationID,(List<SelectListItem>)ViewBag.lv,new {@class="form-control",@id="drop"} )
                            </div>

                            <div class="d-flex">
                                <div class="form-group mr-2">
                                    <label class="label">Alış Tarihi</label>
                                    <input type="datetime-local" class="form-control" name="book_pick_date">
                                </div>
                                <div class="form-group ml-2">
                                    <label class="label">İade Tarihi</label>
                                    <input type="datetime-local" class="form-control" name="book_off_date">
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Uygun Araçları Listele" class="btn btn-secondary py-3 px-4">
                            </div>
                        </form>
                    </div>
                    <div class="col-md-8 d-flex align-items-center">
                        <div class="services-wrap rounded-right w-100">
                            <h3 class="heading-section mb-4">Araç Kiralamanın En Basit Yolu</h3>
                            <div class="row d-flex mb-4">
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-route"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Almak İstediğin Konumu Seç</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-handshake"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">En Uygun Araçları Görüntüle</h3>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 d-flex align-self-stretch ftco-animate">
                                    <div class="services w-100 text-center">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="flaticon-rent"></span></div>
                                        <div class="text w-100">
                                            <h3 class="heading mb-2">Kiralamayı Tamamla, Hepsi bu.</h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <p><a href="#" class="btn btn-primary py-3 px-4">Reserve Your Perfect Car</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@await Component.InvokeAsync("_HomeLast5CarsComponentPartial")
@await Component.InvokeAsync("_AboutUsComponentPartial")
@await Component.InvokeAsync("_ServiceComponentPartial")
@await Component.InvokeAsync("_BecomeADriverComponentPartial")
@await Component.InvokeAsync("_TestimonialComponentPartial")
@await Component.InvokeAsync("_HomeLast3BlogComponentPartial")
@await Component.InvokeAsync("_StatisticsComponentPartial")

<style>
    #drop option {
        color: black;
    }
</style>