
@{
    ViewData["Title"] = "CarDetail";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

@await Component.InvokeAsync("_MainDefaultLayoutComponentPartial", new { p = "Araç Detayları"})

<section class="ftco-section ftco-car-details">
	<div class="container">

		@await Component.InvokeAsync("_CarDetailMainCarFeatureComponentPartial", new {id = ViewBag.id})

		<div class="row">
			<div class="col-md-12 pills">
				<div class="bd-example bd-example-tabs">
					@await Component.InvokeAsync("_CarDetailTabPaneComponentPartial")

					<div class="tab-content" id="pills-tabContent">
						@await Component.InvokeAsync("_CarDetailCarFeatureByCarIDComponentPartial", new {id = ViewBag.id})
						@await Component.InvokeAsync("_CarDetailDescriptionComponentPartial", new {id = ViewBag.id})
						@await Component.InvokeAsync("_CarDetailCommentByCarIDComponentPartial")
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
