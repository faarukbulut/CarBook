@model CreateCommentDto

<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Yapın</h3>
    
    <form method="post" asp-action="AddComment" asp-controller="Blog" asp-route-blogID="@ViewBag.blogID" class="p-5 bg-light">
        
        <div class="form-group">
            <label for="name">Ad Soyad *</label>
            <input type="text" class="form-control" asp-for="Name">
        </div>
   
        <div class="form-group">
            <label for="name">Email Adresiniz *</label>
            <input type="email" class="form-control" asp-for="Email">
        </div>

        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea ncols="30" rows="10" class="form-control" asp-for="Description"></textarea>
        </div>
        
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>