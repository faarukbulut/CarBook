@model List<ResultBlogLast3WithAuthorsDto>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Blog</span>
                <h2>Son Bloglar</h2>
            </div>
        </div>
        <div class="row d-flex">
            @foreach(var item in Model)
            {
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry justify-content-end">
                        <img class="block-20" src="~/carbook-master/images/@item.CoverImageUrl">
                        <div class="text pt-4">
                            <div class="meta mb-3">
                                <div>@item.CreatedDate.ToShortDateString()</div>
                                <div>@item.AuthorName</div>
                                <div><span class="icon-chat"></span> 0</div>
                            </div>
                            <h3 class="heading mt-2"><a href="/Blog/BlogDetail/@item.BlogID">@item.Title</a></h3>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>