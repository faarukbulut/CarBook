@model List<ResultFooterAddressDto>

@foreach(var item in Model)
{
    <footer class="ftco-footer ftco-bg-dark ftco-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2"><a href="#" class="logo">Car<span>book</span></a></h2>
                        <p>@item.Description</p>
                        <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                            <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                            <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                            <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4 ml-md-5">
                        <h2 class="ftco-heading-2">Hızlı Linkler</h2>
                        <ul class="list-unstyled">
                            <li><a href="/About" class="py-2 d-block">Hakkımızda</a></li>
                            <li><a href="/Service" class="py-2 d-block">Hizmetlerimiz</a></li>
                            <li><a href="#" id="btn1" class="py-2 d-block">Şartlar & Koşullar</a></li>
                            <li><a href="#" id="btn2" class="py-2 d-block">Güvenlik</a></li>
                            <li><a href="#" id="btn3" class="py-2 d-block">Çerez Politikası</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Müşteri Desteği</h2>
                        <ul class="list-unstyled">
                            <li><a href="#" id="btn4" class="py-2 d-block">Sıkça Sorulanlar</a></li>
                            <li><a href="#" id="btn5" class="py-2 d-block">Ödeme Yöntemleri</a></li>
                            <li><a href="/CarPricing" class="py-2 d-block">Kiralama</a></li>
                            <li><a href="#" id="btn6" class="py-2 d-block">Nasıl Çalışır</a></li>
                            <li><a href="/Contact" class="py-2 d-block">Bize Yazın</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Bir Sorunuz Mu Var?</h2>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">@item.Address</span></li>
                                <li><span class="icon icon-phone"></span><span class="text">@item.Phone</span></li>
                                <li><span class="icon icon-envelope"></span><span class="text">@item.Email</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">
                    <p>Copyright &copy; @DateTime.Now.Year - Tüm Hakları Saklıdır.</p>
                </div>
            </div>
        </div>
    </footer>
}

<div id="ftco-loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" /></svg></div>


<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $('#btn1').click(function () {
        Swal.fire("Şartlar & Koşullar", "Araba kiralama sürecine dair tüm hizmet koşullarına rezervasyonun fiziki olarak gerçekleştirileceği ofislerimizde yer alan anlaşma dökümanlarından ulaşabilirsiniz. Bütün sürecin hasar, ceza, geçişler ile ilgili detaylar yer almaktadır. Keyifli yolculuklar dileriz.");
    });

    $('#btn2').click(function () {
        Swal.fire("Güvenlik", "CarBook websitemiz .NET Core teknolojinde SHA256 şifreleme tekniğiyle verilerin tamamen şifreli olarak tutulması alt yapısına sahiptir. Sistemimizde JWT doğrulaması yapılmaktadır. Kullanıcılarımızın ödeme yaptıkları kart bilgileri sistemde kesinlikle saklanmamaktadır. T.C. Kimlik numarası, Mail adresi ve telefon gibi bilgiler ise şifrelenerek tutulmaktadır.")
    });

    $('#btn3').click(function () {
        Swal.fire("Çerez Politikası", "Sizlere daha iyi hizmet sunabilmek adına tarayıcı çerezlerini kullanmaktayız.")
    });

    $('#btn4').click(function () {
        Swal.fire("S.S.S.", "Sistem ile ilgili sık sorulan sorular yer alır.")
    });

    $('#btn5').click(function () {
        Swal.fire("Ödeme Yöntemleri", "Ödeme işlemleri yalnızca fiziki lokasyonlarımızdaki kiralama noktalarında kredi kartı ile yapılmaktadır.")
    });

    $('#btn6').click(function () {
        Swal.fire("Nasıl Çalışır", "Sistem ile ilgili çalışma sistemi yer alır.")
    });


</script>