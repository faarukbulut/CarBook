@model List<ResultCarPricingListWithModelDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

@await Component.InvokeAsync("_MainDefaultLayoutComponentPartial", new { p = "Fiyat Paketleri"})

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Saatlik Kiralama</th>
								<th class="bg-dark heading">Günlük Kiralama</th>
								<th class="bg-black heading">Haftalık Kiralama</th>
							</tr>
						</thead>
						<tbody>
							@foreach(var item in Model)
							{
								<tr class="">
									<td class="car-image"><div class="img" style="background-image:url(/carbook-master/images/@item.CoverImageUrl);"></div></td>
									<td class="product-name">
										<h3>@item.Model</h3>
										<p class="mb-0 rated">
											<span>Puan:</span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
										</p>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Bu Aracı Kiralayın</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @item.HourlyAmount.ToString("#,##0")</span>
												<span class="per">/saatlik</span>
											</h3>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Bu Aracı Kiralayın</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @item.DailyAmount.ToString("#,##0")</span>
												<span class="per">/günlük</span>
											</h3>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Bu Aracı Kiralayın</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @item.WeeklyAmount.ToString("#,##0")</span>
												<span class="per">/haftalık</span>
											</h3>
										</div>
									</td>
								</tr>

							}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>