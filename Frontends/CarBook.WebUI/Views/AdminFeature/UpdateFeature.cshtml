@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Araba Özellik Düzenle</h4>
            <form method="post">
                @Html.HiddenFor(x => x.FeatureID)

                <div class="form-group">
                    <label>Özellik</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>

                <button type="submit" class="btn btn-primary waves-effect waves-light">Düzenle</button>
            </form>

        </div>
    </div>
</div>
